<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_contacts"
        android:layout_width="368dp"
        android:layout_height="184dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_dialling_number"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_contacts" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_dialling_1"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/btn_dialling_2"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/btn_dialling_3"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_dialling_4"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/btn_dialling_5"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="5" />

            <Button
                android:id="@+id/btn_dialling_6"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_dialling_7"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:id="@+id/btn_dialling_8"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:id="@+id/btn_dialling_9"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_dialling_star"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="*" />

            <Button
                android:id="@+id/btn_dialling_0"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/btn_dialling_hash"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="#" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_dialling_setting"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/btn_dialling_call"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/btn_dialling_del"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>